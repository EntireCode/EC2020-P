@page
@model ApplicationUsersCreateModel
@{
    ViewData["Title"] = "Create Application User";
}

<h2>Create</h2>

<h4>Application User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Roles Assigned</label>
                <div class="cpl-md-offset-2 col-md-10">
                    <table>
                        @{
                            int cnt = 0;
                            foreach (var role in Model.AssignedRolesDataList)
                            {
                                @:<tr>
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    <td>
                                        <label class="switch switch-3d switch-text switch-info mb-xl-3">
                                            <input name="selectedRoles" value="@role.Id" type="checkbox" class="switch-input" @(Html.Raw(role.Assigned ? "checked=\"checked\"" : ""))>
                                            <span class="switch-label" data-on="On" data-off="Off"></span>
                                            <span class="switch-handle"></span>
                                        </label>
                                        @cnt : @role.Name
                                        @*<input type="checkbox"
                                                name="selectedRoles"
                                                value="@role.Id"
                                                @(Html.Raw(role.Assigned ? "checked=\"checked\"" : "")) />
                                        @cnt : @role.Name*@
                                    </td>
                                @:</tr>
                            }
                        }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="ApplicationUsersIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}