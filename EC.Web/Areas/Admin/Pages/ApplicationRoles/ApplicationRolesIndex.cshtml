@page
@model ApplicationRolesIndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Application Roles List</h2>

<p>
    <a asp-page="ApplicationRolesCreate">Create New</a>
</p>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].CreatedDateTime)                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Name)
            </th>
            <th>
                <span>Normalized Name</span>
            </th>
            <th>
                <span>Currency Stamp</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApplicationRole)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NormalizedName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
                </td>
                <td>
                    <a asp-page="./ApplicationRolesEdit" asp-route-id="@item.Id" class="btn btn-default btn-sm"><i class="icon-pencil icons font-sm d-block mt-sm-2"></i></a>
                    <a asp-page="./ApplicationRolesDetails" asp-route-id="@item.Id" class="btn btn-default btn-sm"><i class="icon-magnifier icons font-sm d-block mt-sm-2"></i></a>
                    <a asp-page="./ApplicationRolesDelete" asp-route-id="@item.Id" class="btn btn-default btn-sm"><i class="icon-trash icons font-sm d-block mt-sm-2"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>