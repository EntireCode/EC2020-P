@using EC.Web.ViewModels.Base;
@{
    @model UserAccountInfoViewModel
}
<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <img src="@Model.UserAvatarURL" class="img-avatar" alt="@Model.UserEmail">
    </a>
    <div class="dropdown-menu dropdown-menu-right">
        <div class="dropdown-header text-center">
            <strong>Account</strong>
        </div>
        <a class="dropdown-item" href="#"><i class="fa fa-bell-o"></i> Updates<span class="badge badge-info">@Model.Updates</span></a>
        <a class="dropdown-item" href="#"><i class="fa fa-envelope-o"></i> Messages<span class="badge badge-success">@Model.Messages</span></a>
        <a class="dropdown-item" href="#"><i class="fa fa-tasks"></i> Tasks<span class="badge badge-danger">@Model.Tasks</span></a>
        <a class="dropdown-item" href="#"><i class="fa fa-comments"></i> Comments<span class="badge badge-warning">@Model.Comments</span></a>
        <div class="dropdown-header text-center">
            <strong>Settings</strong>
        </div>
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/PersonalData"><i class="fa fa-user"></i> Profile</a>
        @*<a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index"><i class="fa fa-user"></i> Profile</a>*@
        <a class="dropdown-item" href="#"><i class="fa fa-wrench"></i> Settings</a>
        <a class="dropdown-item" href="#"><i class="fa fa-usd"></i> Payments<span class="badge badge-secondary">@Model.Payments</span></a>
        <a class="dropdown-item" href="#"><i class="fa fa-file"></i> Projects<span class="badge badge-primary">@Model.Projects</span></a>
        <div class="divider"></div>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <button type="submit" class="dropdown-item"><i class="fa fa-lock"></i> Logout</button>
        </form>
    </div>
</li>

