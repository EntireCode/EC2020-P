@model List<string>
@{
    var path = string.Empty;
    var counter = 0;
}
<ol class="breadcrumb">    
    <!-- Breadcrumb Menu-->
    @if (Model.Count() == 0)
    {
        <li class="breadcrumb-item active"><a href="/">Home</a></li>
    }
    else
    {
        <li class="breadcrumb-item"><a href="/">Home</a></li>
    }
    @foreach (var route in Model)
    {
        counter++;
        path += string.Format("/{0}", route);
        if (counter == Model.Count())
        {
            <li class="breadcrumb-item active"><a href="@path"> @route</a></li>
        }
        else
        {
            <li class="breadcrumb-item"><a href="@path"> @route</a></li>
        }

    }
    <li class="breadcrumb-menu d-md-down-none">
        <div class="btn-group" role="group" aria-label="Button group">
            <a class="btn" asp-page="Index"><i class="fa fa-windows"></i> Home</a>
            <a class="btn" asp-page="About"><i class="icon-speech"></i> About</a>
            <a class="btn" asp-page="Contact"><i class="icon-envelope"></i> Contact</a>
        </div>
    </li>
</ol>
